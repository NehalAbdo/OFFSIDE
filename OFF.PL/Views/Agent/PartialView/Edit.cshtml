@using OFF.PL.ViewModels
@model AgentRegisterVM

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>OFFSIDE</title>
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
          integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A=="
          crossorigin="anonymous"
          referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="Css/Prof agent.css" />
</head>
<body>
    <div class="profile">
        <h1>My Profile</h1>
        <img src="~/Files/Pics/@Model.ImageName" alt="profile" />

        <div class="right">
            <div id="form">
                <div class="input">
                    <p>Name</p>
                    <p class="box">@Html.DisplayFor(model=>model.FName)</p>
                </div>
                <div class="input">
                    <p>E-mail</p>
                    <p class="box">@Html.DisplayFor(model=>model.Email)</p>
                </div>
                <div class="input">
                    <p>Number</p>
                    <p class="box">@Html.DisplayFor(model=>model.Phone)</p>
                </div>
                <div class="input">
                    <p>BirthDate</p>
                    <p class="box">@Html.DisplayFor(model=>model.BirthDate)</p>
                </div>
                <div class="input">
                    <p>Nationality</p>
                    <p class="box">@Html.DisplayFor(model=>model.Nationality)</p>
                </div>
            </div>
@*             <input type="submit" class="edit" value="Edit Profile" />
 *@        </div>
    </div>
</body>
</html>