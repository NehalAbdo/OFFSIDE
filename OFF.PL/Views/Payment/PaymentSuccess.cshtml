@using OFF.PL.ViewModels
@using System.Security.Claims
@model PaymentSuccessViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1">
    <title>All players</title>
    <link rel="stylesheet" href="~/css/alplayers.css">
    <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
</head>
<body>



    <div class="main-content">
        <header>
            <div class="header-content">


                <div class="header-menu">


                    <ul>
                        <br>

                        <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li><a asp-controller="Home" asp-action="News">News</a></li>
                        <li><a asp-controller="Home" asp-action="AllPlayer">Players</a></li>
                        <li><a asp-controller="Home" asp-action="AllAgent">Custodians</a></li>
                        <li><a asp-controller="Home" asp-action="AboutUs">About Us</a></li>
                        <div class="dropdown">
                            <button class="dropbtn">    <span class="las la-bars"></span></button>
                            <div class="dropdown-content">
                                <a href="@Url.Action("Profile", "Agent", new { id = User.FindFirst(ClaimTypes.NameIdentifier)?.Value })">Profile</a>
                                <a href="#">Logout</a>
                            </div>
                    </ul>
                </div>
            </div>
        </header>
        <main>
            <div class="page-content">



                <div class="records table-responsive">

                    <div class="record-header">


                        <div class="browse">
                            <input type="search" placeholder="Search" class="record-search">

                        </div>
                    </div>

                    <div>
                        <table width="100%">
                            <thead>
                                <tr>
                                    <th><span class=""></span> Date</th>
                                    <th><span class=""></span>Transaction ID</th>
                                    <th><span class=""></span>Amount</th>
                                    <th><span class=""></span>Payment Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var payment in Model.Payments)
                                {
                                    <tr>
                                        <td>@payment.PaymentDate.ToShortDateString()</td>
                                        <td>@payment.Id</td>
                                        <td>@payment.Amount</td>
                                        <td>@payment.PaymentStatus</td>
                                        <!-- Display additional payment details -->
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                </div>

            </div>

        </main>

    </div>
</body>
</html>