@using OFF.PL.ViewModels
@model IEnumerable<ContactVM>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1">
    <title> Admin Dashboard</title>
    <link rel="stylesheet" href="~/css/dashboard.css">
    <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
</head>
<body>
    <input type="checkbox" id="menu-toggle">
    <div class="sidebar">
        <div class="side-header">
            <h3>A<span>dmin</span></h3>
        </div>

        <div class="side-content">
            <div class="profile">
                <div class="profile-img bg-img" style="background-image: url(img/3.jpeg)"></div>
                <h4>Nehal</h4>
                <small>Admin</small>
            </div>

            <div class="side-menu">
                <ul>
                    <li>
                        <a asp-controller="Admin" asp-action="Index">
                            <span class="las la-home"></span>
                            <small>Dashboard</small>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Roles" asp-action="Index">
                            <span class="las la-users"></span>
                            <small>Roles</small>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Admin" asp-action="AddPost">
                            <span class="las la-user-alt"></span>
                            <small>Add post</small>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Admin" asp-action="MailBox">
                            <span class="las la-envelope"></span>
                            <small>Mailbox</small>
                        </a>
                    </li>
                    <li>
                        <a asp-action="AllUser">
                            <span class="las la-clipboard-list"></span>
                            <small>Users</small>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Admin" asp-action="Payment">
                            <span class="las la-shopping-cart"></span>
                            <small>Payments</small>
                        </a>
                    </li>


                </ul>
            </div>
        </div>
    </div>

    <div class="main-content">
        <header>
            <div class="header-content">
                <label for="menu-toggle">
                    <span class="las la-bars"></span>
                </label>

                <div class="header-menu">
                    <label for="">

                    </label>
                    <ul>
                        <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li><a asp-controller="Home" asp-action="News">News</a></li>
                        <li><a asp-controller="Home" asp-action="AllPlayer">Players</a></li>
                        <li><a asp-controller="Home" asp-action="AllAgent">Custodians</a></li>
                        <li><a asp-controller="Home" asp-action="AboutUs">About Us</a></li>
                    </ul>

                    <div class="notify-icon">
                        <a href="mailbox.html">
                            <span class="las la-envelope"></span>
                            <span class="notify">4</span>
                        </a>
                    </div>



                    <div class="user">
                        <div class="bg-img" style="background-image: url(img/1.jpeg)"></div>

                        <a href="logout.html">
                            <span class="las la-power-off"></span>
                            <span>Logout</span>
                        </a>
                    </div>
                </div>
            </div>
        </header>
        <main>

            <div class="page-header">
                <h1>Users</h1>
                <small></small>
            </div>

            <div class="page-content">

               @*  <div class="analytics">

                    <div class="card">
                        <div class="card-head">
                            <h2>150,000</h2>
                            <span class="las la-user-friends"></span>
                        </div>
                        <div class="card-progress">
                            <small>Players</small>
                            <div class="card-indicator">
                                <div class="indicator one" style="width: 60%"></div>
                            </div>
                        </div>
                    </div>

                    <div class="card">
                        <div class="card-head">
                            <h2>250,000</h2>
                            <span class="las la-user-friends"></span>
                        </div>
                        <div class="card-progress">
                            <small>custodians</small>
                            <div class="card-indicator">
                                <div class="indicator two" style="width: 80%"></div>
                            </div>
                        </div>
                    </div>

                </div> *@
                <div class="records table-responsive">

                    <div class="record-header">
                        <div class="add">
                            <span></span>
                            <select name="" id="">
                                <option value="">ID</option>
                            </select>

                        </div>

                        <div class="browse">
                            <input type="search" placeholder="Search" class="record-search">
                            <select name="" id="">
                                <option value="">All</option>
                                <option value="">players</option>
                                <option value="">custodians</option>
                            </select>
                        </div>
                    </div>

                    <div>
                        @if (Model != null && Model.Count() > 0)
                        {
                            <table width="100%">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th><span class="las la-sort"></span> User</th>
                                        <th><span class="las la-sort"></span> </th>
                                        <th><span class="las la-sort"></span> </th>
                                        <th><span class="las la-sort"></span> Details</th>
                                        <th><span class=""></span> </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in Model)
                                    {
                                        <tr>
                                            <td></td>
                                            <td>
                                                <div class="client">
                                                    <div class="client-info">
@*                                                         <h4>@user.Name</h4>
 *@                                                        <small>@user.Email</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                            </td>
                                            <td>
                                            </td>
                                            <td>
                                                <form method="post" asp-controller="Admin" asp-action="ContactDetails" asp-route-id="@user.ID">
                                                    <button type="submit" id="bottone5">Details</button>
                                                </form>
                                                @* <form method="post" asp-action="Delete" asp-route-id="@user.ID">
                                        <button type="submit" id="bottone5">Delete</button>
                                        </form> *@
                                            </td>
                                            <td>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                    </div>

                </div>

            </div>

        </main>

    </div>
</body>
</html>