@using OFF.PL.ViewModels
@using System.Security.Claims
@model PostVM
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EditPost</title>
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
          integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A=="
          crossorigin="anonymous"
          referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/Prof player.css" />
</head>
<body>
    <div class="profile">
        <div class="right">
            <h1 style="margin-bottom: 40px">Add Post</h1>
            <form asp-controller="Player" asp-action="UpdatePost" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />

                <div class="input">
                    <label for="Content">Edit Content</label>
                    <input class="input-box" type="text" id="Content" name="Content" asp-for="Content" value="@Model.Content">
                </div>

                <div class="input">
                    <label for="Image">Upload Image</label>
                    <input class="file" type="file" id="Image" name="Image" asp-for="Image">
                </div>

                <div class="input">
                    <label for="Video">Upload Video</label>
                    <input class="file" type="file" id="Video" name="Video" asp-for="Video">
                </div>

                <input type="submit" class="upload" value="Update Post">
            </form>
        </div>
    </div>

</body>
</html>
